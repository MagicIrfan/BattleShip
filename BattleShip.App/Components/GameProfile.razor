@if (User != null)
{
    <div class="profile">
        <div class="profile-details">
            <img src="@User.Picture" alt="Photo de profil" class="profile-image" />
            <p>@User.Username</p>
        </div>
    </div>
}
else
{
    <div class="profile">
        <div class="profile-details">
            <img src="/Public/placeholder.jpg" alt="Photo de profil" class="profile-image" />
            <p>IA</p>
        </div>
    </div>
}

@code {
    [Parameter] public PlayerInfo? User { get; set; }
}